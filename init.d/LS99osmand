#!/system/bin/sh

LOGFILE=$1

. /etc/init.d/googlewiz.sh

waitforsdcard $LOGFILE

# we have to wait a bit to make sure /sdcard/mymusic is mounted
sleep 30

echo "-- checking if osmand maps need to be copied" | tee -a $LOGFILE

SOURCE=/sdcard/mymusic
MAP=Belgium_europe.obf
TARGET=/sdcard/Android/data/net.osmand/files/

if [ -f $SOURCE/$MAP ]; then
    if [ -d $TARGET ]; then
        if [ ! -f $TARGET/$MAP ]; then
            echo "-- copying $MAP from $SOURCE to $TARGET" | tee -a $LOGFILE
            cp $SOURCE/$MAP $TARGET
        else
            echo "-- nothing to do, $TARGET/$MAP already exists" | tee -a $LOGFILE
        fi
    else
        echo "-- nothing to do, $TARGET directory does not exist" | tee -a $LOGFILE
    fi
else
    echo "-- nothing to do, $SOURCE/$MAP does not exist" | tee -a $LOGFILE
fi
