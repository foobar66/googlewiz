$SETTINGSPUT global oem_black_mode 1
$SETTINGSPUT global oneplus_otg_auto_disable 1
$SETTINGSPUT global oneplus_permission_agree 1
$SETTINGSPUT global oneplus_screen_refresh_rate 0
