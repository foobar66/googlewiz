#!/system/bin/sh

# we should only run once !
if [ -f "/data/.googlewiz.touch" ]; then exit 0; fi

LOGFILE=$1
. /etc/init.d/googlewiz.sh

if [ $($GETPROP ro.build.version.sdk) -ne 29 ]; then
    echo "-- we're NOT on android 10, not running this script" | $TEE $LOGFILE
    exit 0
fi

